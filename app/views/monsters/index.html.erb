<div class="navigation">
  <%= link_to "List View", monsters_path(view: "list"), class: "button is-primary" %>
  <%= link_to "Detailed View", monsters_path(view: "detailed"), class: "button is-link" %>
</div>

<% if @view_type == "list" %>
  <%= render partial: "monsters/monster_list" %>
  <%= paginate @monsters %>
<% elsif @view_type == "detailed" %>
  <%= render partial: "monsters/monster", collection: @monsters, locals: { show_link: true } %>
  <%= paginate @monsters %>
<% end %>