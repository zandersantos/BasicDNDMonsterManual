<% content_for :title, "Pages" %>

<h2 class= "title is-2">Pages</h2>

<div id="pages">
  <% @pages.each do |page| %>
    <%= render page %>
    <p>
      <%= link_to "Show this page", page_permalink_path(page.permalink) %>
    </p>
  <% end %>
</div>

<%= link_to "New page", new_page_path %>
