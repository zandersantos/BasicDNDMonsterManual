<div class="navigation">
  <%= link_to "List View", senses_path(view: "list"), class: "button is-primary" %>
  <%= link_to "Detailed View", senses_path(view: "detailed"), class: "button is-link" %>
</div>

<% if @view_type == "list" %>
  <%= render partial: "senses/senselist" %>
<% elsif @view_type == "detailed" %>
  <% @senses.each do |sense| %>
    <%= render partial: "senses/sense", locals: { sense: sense, monsters: sense.monsters } %>
  <% end %>
<% end %>